public class Escseq {
    public static void main(String[] args) {
        // Loop through numbers 1 to 5
        for (int i = 1; i <= 5; i++) {
            // Calculate the multiple of 7
            int multiple = 7 * i;
            
            // Check if the multiple is even
            if (multiple % 2 == 0) {
                // Print the even multiple with a tab character before it
                System.out.println("\t" + multiple);
            } else {
                // Print the odd multiple without any tab character
                System.out.println(multiple);
            }
        }
    }
}
